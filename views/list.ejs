<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="css/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%= day %></h1>
    </div>

    <div class="box">
      <% for (var i = 0; i < items.length; i++) { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=items[i]._id%>" onClick="this.form.submit();"/>
          <p><%= items[i].name %></p>
        </div>
      </form>
      <% } %>

      <form class="item" action="/" method="POST">
        <input
          type="text"
          name="todo"
          placeholder="New Item"
          autocomplete="off"
          required
        />
        <button type="submit">+</button>
      </form>
    </div>
  </body>
</html>
